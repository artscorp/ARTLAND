<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#121212"
    android:padding="32dp">

    <!-- Левый логотип скорпион -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingEnd="32dp">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/ic_launcher_scorpion"
            android:scaleType="fitCenter"
            android:contentDescription="ART Logo"/>

    </LinearLayout>

    <!-- Правая часть с текстом и кнопкой -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Заголовок ART -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ART"
            android:textSize="64sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="60dp"/>

        <!-- Главная кнопка Настройки -->
        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/settings_button_background"
            android:src="@drawable/ic_launcher_scorpion"
            android:scaleType="fitCenter"
            android:padding="36dp"
            android:elevation="8dp"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Настройки"
            android:textSize="28sp"
            android:textColor="#E0E0E0"
            android:textStyle="bold"
            android:layout_marginBottom="80dp"/>

        <!-- Нижняя версия -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="версия 1.3 - ART"
            android:textSize="18sp"
            android:textColor="#9E9E9E"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>